<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaintenanceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--/////////////   MAIN     ///////////////////  -->
            <LinearLayout android:id="@+id/llMainScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_action_lock_open"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="MainScreen"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnActualizationCenter"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Actualization Center"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </TableRow>



                </TableLayout>

            </LinearLayout>



           <!-- //////////////  INVENTARIO    ///////////////// -->
            <LinearLayout android:id="@+id/llMaintenanceInventory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_inventario"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Inventory"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnFamilyInv"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products_family"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Family"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnGroupsInv"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products_group"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Groups"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnMeasuresInv"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products_measure"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Measures"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </TableRow>


                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView android:id="@+id/btnProductsInv"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/products"
                            android:background="?attr/selectableItemBackgroundBorderless"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Products"
                            android:gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>



                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnAlmacenes"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Almacenes"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>


                    </TableRow>

                </TableLayout>

            </LinearLayout>


            <!-- ////////////   SALES PRODUCTS  /////////////////  -->
            <LinearLayout android:id="@+id/llMaintenanceProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_fastfood"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Products"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnFamily"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products_family"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Family"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnGroups"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products_group"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Groups"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnMeasures"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products_measure"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Measures"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </TableRow>


                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnProducts"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Products"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </TableRow>

                </TableLayout>



            </LinearLayout>




            <!-- ////////////   USERS  /////////////////  -->
            <LinearLayout android:id="@+id/llMaintenanceUsers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_users"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Users"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView android:id="@+id/btnUserRol"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/user_type"
                            android:background="?attr/selectableItemBackgroundBorderless"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User Rol"
                            android:gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView android:id="@+id/btnUsers"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/user"
                            android:background="?attr/selectableItemBackgroundBorderless"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Users"
                            android:gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    </TableRow>

                </TableLayout>

            </LinearLayout>



            <!-- /////////  AREAS    /////////////  -->
            <LinearLayout android:id="@+id/llMaintenanceAreas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_action_lock_open"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Areas"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">


                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnAreas"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Areas"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnMesas"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/user_type"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mesas"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>



                    </TableRow>

                </TableLayout>

            </LinearLayout>




            <!-- /////// CONTROLS    ////////// -->
            <LinearLayout android:id="@+id/llMaintenanceControls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_back"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Controls"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnControls"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/user_type"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Controles"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>


                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView android:id="@+id/btnTableCode"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/user"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Table Code"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>


                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnTableFilter"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/products"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Table filters"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </TableRow>



                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">


                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView android:id="@+id/btnRolesControl"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/user"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Roles Control"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>


                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnUsersControl"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/user_type"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Users Control"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>



                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnUserTable"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/user_type"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Users Table"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>


                    </TableRow>


                    <TableRow android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">


                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView android:id="@+id/btnOrderSplit"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/user"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Order Split Control"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>


                    <LinearLayout android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView android:id="@+id/btnOrderSplitDestiny"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/user_type"
                            android:background="?attr/selectableItemBackgroundBorderless"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Split Destiny"
                            android:gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>



                        <LinearLayout android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView android:id="@+id/btnOrderMove"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/user_type"
                                android:background="?attr/selectableItemBackgroundBorderless"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Orders Move"
                                android:gravity="center"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </TableRow>


                </TableLayout>

            </LinearLayout>




        </LinearLayout>

    </ScrollView>


</FrameLayout>