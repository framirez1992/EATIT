<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminLicenseSetupFragment"
    android:orientation="vertical">


    <!--/////////////   MAIN     ///////////////////  -->
    <LinearLayout android:id="@+id/llMainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_key"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Licence"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:id="@+id/tvLicenceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="60dp">

                        <ImageView android:id="@+id/btnTokens"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_lock"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="@color/white"
                            android:layout_gravity="center"/>

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tokens"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>




                <LinearLayout android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="60dp">

                        <ImageView android:id="@+id/btnUsers"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/user"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="@color/white"
                            android:layout_gravity="center"/>

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Users"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>



                <LinearLayout android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="60dp">

                        <ImageView android:id="@+id/btnDevices"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_device"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="@color/white"
                            android:layout_gravity="center"/>

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Devices"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>

            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

            <LinearLayout android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="60dp">

                    <ImageView android:id="@+id/btnUserDevices"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_user_device"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/white"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Devices"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>



<!--
                <LinearLayout android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="60dp">

                        <ImageView android:id="@+id/btnControls"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_control"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="@color/white"
                            android:layout_gravity="center"/>

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Controles"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>
-->

            </TableRow>



        </TableLayout>

    </LinearLayout>

</LinearLayout>