<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersEditionFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">



        <LinearLayout android:id="@+id/llEdition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button android:id="@+id/btnAnular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Anular"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
            <Button android:id="@+id/btnEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
            <Button android:id="@+id/btnEntregar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Entregar"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

            <Button android:id="@+id/btnCerrar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <TextView android:id="@+id/tvOrderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="25sp"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Area"
                android:padding="5dp"
                android:layout_weight="1"
                android:textStyle="bold"/>
            <TextView android:id="@+id/tvArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mesa"
                android:padding="5dp"
                android:layout_weight="1"
                android:textStyle="bold"/>
            <TextView android:id="@+id/tvMesa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:layout_weight="1"/>


        </LinearLayout>

        <TextView android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="5dp"/>
        <TextView android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="5dp"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"/>

    </LinearLayout>
    </ScrollView>

</android.support.v7.widget.CardView>